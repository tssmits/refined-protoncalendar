{
  "manifest_version": 2,
  "name": "Refined ProtonCalendar Fork",
  "description": "Implements a number of usability improvements in the ProtonCalendar web app",
  "homepage_url": "https://github.com/tssmits/refined-protoncalendar",
  "update_url": "https://github.com/tssmits/refined-protoncalendar",
  "version": "1.2",
  "icons": {
    "48": "icons/icon.png",
    "96": "icons/icon@2x.png"
  },

  "content_scripts": [
    {
      "matches": ["*://calendar.protonmail.com/*", "*://calendar.proton.me/*"],
      "js": ["./improvements.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "6bc9c01c-66f2-414a-bf38-2788828e894c",
      "strict_min_version": "42.0"
    }
  }
}
